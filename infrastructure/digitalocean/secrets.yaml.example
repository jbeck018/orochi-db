apiVersion: v1
kind: Secret
metadata:
  name: control-plane-secrets
  namespace: orochi-cloud
type: Opaque
stringData:
  # Database connection - GET THESE FROM DIGITALOCEAN CONTROL PANEL
  DB_HOST: "your-db-host.db.ondigitalocean.com"
  DB_PORT: "25060"
  DB_USER: "doadmin"
  DB_PASSWORD: "CHANGE_ME_USE_DIGITALOCEAN_GENERATED_PASSWORD"
  DB_NAME: "orochi_cloud"
  DB_SSL_MODE: "require"

  # JWT Configuration - GENERATE A SECURE RANDOM STRING (min 32 chars)
  # Example: openssl rand -base64 32
  JWT_SECRET: "CHANGE_ME_GENERATE_SECURE_RANDOM_STRING_MIN_32_CHARS"
  JWT_ISSUER: "orochi-cloud"
  JWT_ACCESS_TOKEN_TTL: "15m"
  JWT_REFRESH_TOKEN_TTL: "168h"

  # Admin user seeding - CHANGE THESE IN PRODUCTION
  ADMIN_EMAIL: "admin@yourdomain.com"
  ADMIN_PASSWORD: "CHANGE_ME_USE_STRONG_PASSWORD"
  ADMIN_NAME: "Admin User"
