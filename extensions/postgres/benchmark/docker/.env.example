# =============================================================================
# Orochi DB Benchmark Framework - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
#
# Usage:
#   cp .env.example .env
#   docker-compose up -d
# =============================================================================

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
# PostgreSQL major version for the benchmark database
PG_MAJOR=16

# Database connection settings
POSTGRES_PASSWORD=orochi_bench_secret
POSTGRES_DB=orochi_bench

# External port mapping (host:container)
PGPORT=5432

# =============================================================================
# Benchmark Configuration
# =============================================================================
# Which benchmark suite(s) to run
# Options: all, tpch, timeseries, columnar, distributed, vectorized,
#          pgbench, sysbench, tsbs
# Multiple suites can be comma-separated: tpch,timeseries
BENCHMARK_SUITE=all

# Data scale factor (1 = ~1GB, 10 = ~10GB, 100 = ~100GB)
# Use "auto" for hardware-based auto-detection
SCALE_FACTOR=1

# Number of concurrent benchmark clients
# Use "auto" for hardware-based auto-detection (2x CPU cores)
NUM_CLIENTS=auto

# Number of threads per client
# Use "auto" for hardware-based auto-detection
NUM_THREADS=auto

# Benchmark duration in seconds
DURATION=60

# Warmup period in seconds (before measurements start)
WARMUP=10

# Output format for results (json, csv, text)
OUTPUT_FORMAT=json

# Enable verbose logging
VERBOSE=false

# =============================================================================
# Resource Limits
# =============================================================================
# Database service resource limits
DB_CPU_LIMIT=4
DB_MEMORY_LIMIT=8G

# Benchmark runner resource limits
BENCH_CPU_LIMIT=2
BENCH_MEMORY_LIMIT=4G

# =============================================================================
# Connection Pooler Configuration
# =============================================================================
# Enable pooler comparison benchmarks
COMPARE_POOLERS=false

# PgBouncer settings
PGBOUNCER_PORT=6432

# PgCat settings
PGCAT_PORT=6433

# PgDog settings
PGDOG_PORT=6434

# =============================================================================
# Cloud Deployment Configuration (docker-compose.cloud.yml)
# =============================================================================
# Environment name (development, staging, production)
ENVIRONMENT=development

# Cloud provider (aws, gcp, azure, digitalocean)
CLOUD_PROVIDER=aws

# Primary region for deployment
CLOUD_REGION=us-east-1

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=orochi-benchmark-results
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_CREDENTIALS_FILE=./secrets/aws_credentials

# =============================================================================
# GCP Configuration
# =============================================================================
GCP_PROJECT=
GCP_GCS_BUCKET=orochi-benchmark-results
GCP_CREDENTIALS_FILE=./secrets/gcp-credentials.json

# =============================================================================
# Azure Configuration
# =============================================================================
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=orochi-benchmark-results
AZURE_CREDENTIALS_FILE=./secrets/azure_credentials

# =============================================================================
# DigitalOcean Spaces Configuration
# =============================================================================
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_BUCKET=orochi-benchmark-results
DO_SPACES_REGION=nyc3

# =============================================================================
# Multi-Region Configuration
# =============================================================================
MULTI_REGION_ENABLED=false
PRIMARY_REGION=us-east-1
SECONDARY_REGIONS=eu-west-1,ap-northeast-1

# Region-specific endpoints (for multi-region testing)
REGION_US_EAST_ENDPOINT=
REGION_US_WEST_ENDPOINT=
REGION_EU_WEST_ENDPOINT=
REGION_AP_NORTHEAST_ENDPOINT=

# =============================================================================
# Notification Configuration
# =============================================================================
# Enable notifications when benchmarks complete
NOTIFY_ON_COMPLETE=false

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Discord webhook URL for notifications
DISCORD_WEBHOOK_URL=

# Email for notifications
EMAIL_NOTIFICATION=

# =============================================================================
# Results Publishing
# =============================================================================
# Upload results to S3/GCS
UPLOAD_TO_S3=false
UPLOAD_TO_GCS=false

# Publish results to GitHub
PUBLISH_TO_GITHUB=false
GITHUB_REPO=
GITHUB_TOKEN=

# =============================================================================
# Monitoring Configuration (--profile full)
# =============================================================================
# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000

# Grafana SMTP settings (optional)
GRAFANA_SMTP_ENABLED=false
GRAFANA_SMTP_HOST=
GRAFANA_SMTP_USER=
GRAFANA_SMTP_PASSWORD=

# =============================================================================
# Volume Paths (for cloud deployments with bind mounts)
# =============================================================================
# Database data directory
DB_DATA_PATH=/data/orochi

# Benchmark results directory
RESULTS_PATH=/data/results

# Workload data directory
WORKLOAD_DATA_PATH=/data/workload

# Baseline results for comparison
BASELINE_PATH=/data/baseline

# Generated reports directory
REPORTS_PATH=/data/reports

# Prometheus data directory
PROMETHEUS_DATA_PATH=/data/prometheus

# Grafana data directory
GRAFANA_DATA_PATH=/data/grafana

# =============================================================================
# Advanced Configuration
# =============================================================================
# Enable hardware auto-detection for benchmark parameters
AUTO_DETECT_HARDWARE=true

# Data directory inside container
DATA_DIR=/data

# Results directory inside container
RESULTS_DIR=/results

# Log file location
LOG_FILE=/var/log/benchmark/benchmark.log
