{
  "name": "orochi-db",
  "version": "1.0.0",
  "private": true,
  "description": "Orochi DB - Modern HTAP PostgreSQL Extension",
  "workspaces": [
    "apps/*"
  ],
  "trustedDependencies": [
    "esbuild",
    "@esbuild/*"
  ],
  "overrides": {
    "crossws": "^0.4.1"
  },
  "scripts": {
    "dev": "bun run --cwd apps/dashboard dev",
    "build": "bun run --cwd apps/dashboard build",
    "lint": "bun run --cwd apps/dashboard lint",
    "type-check": "bun run --cwd apps/dashboard type-check",
    "test": "bun test",
    "clean": "rm -rf apps/*/dist apps/*/node_modules node_modules",
    "install:all": "bun install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orochi-db/orochi-db.git"
  },
  "license": "Apache-2.0"
}
