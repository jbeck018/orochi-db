# PgDog Deployment Template
# This template is used by the provisioner to deploy PgDog connection pooler
# alongside PostgreSQL clusters managed by CloudNativePG.
#
# Variables:
#   .Name              - Cluster name
#   .Namespace         - Kubernetes namespace
#   .Pooler            - ConnectionPoolerSpec configuration
#     .Enabled         - Whether pooler is enabled
#     .Image           - PgDog container image
#     .ImageTag        - PgDog image tag
#     .Replicas        - Number of pooler replicas
#     .Resources       - CPU/Memory requirements
#     .Mode            - Pool mode (transaction, session)
#     .TLSEnabled      - Whether TLS is enabled
#     .JWTAuth         - JWT authentication configuration
#   .Labels            - Additional labels
#   .Annotations       - Additional annotations

apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .Name }}-pgdog
  namespace: {{ .Namespace }}
  labels:
    app: pgdog
    app.kubernetes.io/name: pgdog
    app.kubernetes.io/instance: {{ .Name }}
    app.kubernetes.io/component: connection-pooler
    app.kubernetes.io/part-of: orochi-db
    app.kubernetes.io/managed-by: orochi-provisioner
    orochi.io/cluster-name: {{ .Name }}
{{- if .Labels }}
{{ toYaml .Labels | indent 4 }}
{{- end }}
{{- if .Annotations }}
  annotations:
{{ toYaml .Annotations | indent 4 }}
{{- end }}
spec:
  replicas: {{ .Pooler.Replicas }}
  selector:
    matchLabels:
      app: pgdog
      orochi.io/cluster-name: {{ .Name }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 0
      maxSurge: 1
  template:
    metadata:
      labels:
        app: pgdog
        app.kubernetes.io/name: pgdog
        app.kubernetes.io/instance: {{ .Name }}
        app.kubernetes.io/component: connection-pooler
        app.kubernetes.io/part-of: orochi-db
        orochi.io/cluster-name: {{ .Name }}
{{- if .Labels }}
{{ toYaml .Labels | indent 8 }}
{{- end }}
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "9090"
        prometheus.io/path: "/metrics"
{{- if .Annotations }}
{{ toYaml .Annotations | indent 8 }}
{{- end }}
    spec:
      serviceAccountName: {{ .Name }}-pgdog
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
            - weight: 100
              podAffinityTerm:
                labelSelector:
                  matchLabels:
                    app: pgdog
                    orochi.io/cluster-name: {{ .Name }}
                topologyKey: kubernetes.io/hostname
            - weight: 50
              podAffinityTerm:
                labelSelector:
                  matchLabels:
                    app: pgdog
                    orochi.io/cluster-name: {{ .Name }}
                topologyKey: topology.kubernetes.io/zone
      containers:
        # PgDog connection pooler
        - name: pgdog
          image: {{ default "ghcr.io/pgdog/pgdog" .Pooler.Image }}:{{ default "latest" .Pooler.ImageTag }}
          imagePullPolicy: Always
          ports:
            - containerPort: 6432
              name: postgres
              protocol: TCP
            - containerPort: 6433
              name: admin
              protocol: TCP
            - containerPort: 9090
              name: metrics
              protocol: TCP
          env:
            - name: PGDOG_CONFIG
              value: "/etc/pgdog/pgdog.toml"
            - name: RUST_LOG
              value: "pgdog=info,warn"
          volumeMounts:
            - name: config
              mountPath: /etc/pgdog
              readOnly: true
{{- if .Pooler.TLSEnabled }}
            - name: tls
              mountPath: /etc/pgdog/tls
              readOnly: true
{{- end }}
{{- if .Pooler.JWTAuth }}
{{- if .Pooler.JWTAuth.Enabled }}
            - name: secrets
              mountPath: /etc/pgdog/secrets
              readOnly: true
{{- end }}
{{- end }}
          resources:
            requests:
              cpu: "{{ default "250m" .Pooler.Resources.CPURequest }}"
              memory: "{{ default "256Mi" .Pooler.Resources.MemoryRequest }}"
            limits:
              cpu: "{{ default "1000m" .Pooler.Resources.CPULimit }}"
              memory: "{{ default "1Gi" .Pooler.Resources.MemoryLimit }}"
          livenessProbe:
            tcpSocket:
              port: postgres
            initialDelaySeconds: 10
            periodSeconds: 30
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            tcpSocket:
              port: postgres
            initialDelaySeconds: 5
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 2
          securityContext:
            allowPrivilegeEscalation: false
            readOnlyRootFilesystem: true
            capabilities:
              drop:
                - ALL

{{- if .Pooler.JWTAuth }}
{{- if .Pooler.JWTAuth.Enabled }}
        # JWT authentication proxy sidecar
        - name: jwt-proxy
          image: ghcr.io/orochi-db/pgdog-jwt-proxy:latest
          imagePullPolicy: Always
          ports:
            - containerPort: 5433
              name: jwt-postgres
              protocol: TCP
          env:
            - name: UPSTREAM_HOST
              value: "127.0.0.1"
            - name: UPSTREAM_PORT
              value: "6432"
            - name: LISTEN_PORT
              value: "5433"
            - name: LOG_LEVEL
              value: "info"
{{- if .Pooler.JWTAuth.Issuer }}
            - name: JWT_ISSUER
              value: "{{ .Pooler.JWTAuth.Issuer }}"
{{- end }}
{{- if .Pooler.JWTAuth.Audience }}
            - name: JWT_AUDIENCE
              value: "{{ .Pooler.JWTAuth.Audience }}"
{{- end }}
{{- if .Pooler.JWTAuth.PublicKeyPath }}
            - name: JWT_PUBLIC_KEY_PATH
              value: "{{ .Pooler.JWTAuth.PublicKeyPath }}"
{{- else }}
            - name: JWT_PUBLIC_KEY_PATH
              value: "/etc/pgdog/secrets/jwt-public-key.pem"
{{- end }}
          volumeMounts:
            - name: secrets
              mountPath: /etc/pgdog/secrets
              readOnly: true
{{- if .Pooler.TLSEnabled }}
            - name: tls
              mountPath: /etc/pgdog/tls
              readOnly: true
{{- end }}
          resources:
            requests:
              memory: "64Mi"
              cpu: "50m"
            limits:
              memory: "256Mi"
              cpu: "250m"
          livenessProbe:
            tcpSocket:
              port: jwt-postgres
            initialDelaySeconds: 5
            periodSeconds: 30
            timeoutSeconds: 5
            failureThreshold: 3
          readinessProbe:
            tcpSocket:
              port: jwt-postgres
            initialDelaySeconds: 3
            periodSeconds: 10
            timeoutSeconds: 3
            failureThreshold: 2
          securityContext:
            allowPrivilegeEscalation: false
            readOnlyRootFilesystem: true
            capabilities:
              drop:
                - ALL
{{- end }}
{{- end }}

      volumes:
        - name: config
          configMap:
            name: {{ .Name }}-pgdog-config
{{- if .Pooler.JWTAuth }}
{{- if .Pooler.JWTAuth.Enabled }}
        - name: secrets
          secret:
            secretName: {{ default (printf "%s-pgdog-secrets" .Name) .Pooler.JWTAuth.SecretName }}
            defaultMode: 0400
{{- end }}
{{- end }}
{{- if .Pooler.TLSEnabled }}
        - name: tls
          secret:
            secretName: {{ .Name }}-pgdog-tls
            defaultMode: 0400
{{- end }}

      terminationGracePeriodSeconds: 30

      # Ensure pods are spread across nodes
      topologySpreadConstraints:
        - maxSkew: 1
          topologyKey: kubernetes.io/hostname
          whenUnsatisfiable: ScheduleAnyway
          labelSelector:
            matchLabels:
              app: pgdog
              orochi.io/cluster-name: {{ .Name }}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ .Name }}-pgdog
  namespace: {{ .Namespace }}
  labels:
    app: pgdog
    app.kubernetes.io/name: pgdog
    app.kubernetes.io/instance: {{ .Name }}
    app.kubernetes.io/part-of: orochi-db
    orochi.io/cluster-name: {{ .Name }}
